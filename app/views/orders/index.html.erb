<h1>Data</h1>

<form action="/orders" method="get">
  <label for="date">Selected Date:</label>
  <input type="date" name="date" id="date">
  <input type="submit" value="Fetch Data">
</form>

<% if @error_message %>
  <p>Error: <%= @error_message %></p>
<% else %>
  <% if @orders&.any? %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Values</th>
        </tr>
      </thead>
      <tbody>
      <tr>
        <th>Revenue Categories</th>
         <td> <%= @revenue_categories%> </td>
      </tr>
      <tr>
        <th>Revenue</th>
         <td> <%= @revenue%> </td>
      </tr>
      <tr>
        <th>Taxes </th>
        <td><%= @taxes %></td>
      </tr>
      <tr>
        <th>Tips </th>
        <td><%= @tips %></td>
      </tr>
      <tr>
        <th>Liabilities </th>
        <td><%= @liabilities %></td>
      </tr>
      <tr>
        <th>Assets </th>
        <td><%= @assets %></td>
      </tr>
      <tr>
        <th>Payment processors </th>
        <td><%= @payment_processors %></td>
      </tr>
      <tr>
        <th>Adjustements </th>
        <td><%= @adjustments %></td>
      </tr>
      <tr>
        <th>Balance </th>
        <td><%= @balanced %></td>
      </tr>
      
      </tbody>  
    </table>
  <% else %>
    <p>No orders found.</p>
  <% end %>
<% end %>
